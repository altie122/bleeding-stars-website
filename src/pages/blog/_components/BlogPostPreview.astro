---
import { format } from "date-fns";
import { resolveCoverImage } from "~/content/blog/_resolveImages.js";

export type Props = {
	isUpdate: boolean;
	post: {
		slug: string;
		data: {
			title: string;
			description: string;
			publishDate: Date;
			coverImage?: string;
		};
	};
};

const { isUpdate, post } = Astro.props;

const image = await resolveCoverImage(post);
---

<article
	class="border bg-secondary p-4 transition-transform duration-300 ease-out focus-within:outline hover:scale-[1.03] rounded-lg"
>
	<a
		href={isUpdate ? `/updates/${post.slug}/` : `/blog/${post.slug}/`}
		data-astro-prefetch
		class="block outline-none"
	>
		<header>
			<time class="code" datetime={post.data.publishDate.toISOString()}>
				{format(post.data.publishDate, "MMMM d, yyyy")}
			</time>
		</header>
		<div class="-mx-4">
			{
				image && (
					<img
						src={image.src}
						width={image.width}
						height={image.height}
						alt={post.data.title}
						class="my-4"
						loading="lazy"
						decoding="async"
					/>
				)
			}
		</div>

		<div class="mt-6 grid gap-x-16 gap-y-4 md:grid-cols-2">
			<h3 class="heading-4 md:heading-3">{post.data.title}</h3>
			<p class="text-astro-gray-200">{post.data.description}</p>
		</div></a
	>
</article>