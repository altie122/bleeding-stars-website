---
import { ViewTransitions } from "astro:transitions";
interface Props {
	title?: string;
	description: string;
}

const { title = "N/A", description } = Astro.props;
let Title: string;

if (title == "N/A") {
	Title = 'Bleeding Stars'
} else {
	Title = title + ' | Bleeding Stars'
}

import Head from '../components/head.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<script is:inline>
			(function() {
				const getThemePreference = () => {
					if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
						return localStorage.getItem('theme');
					}
					return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
				};
				const theme = getThemePreference();
				const isDark = theme === 'dark';
				document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
			})();
		</script>
		<Head title={Title} description={description} banner="/banner.jpg" icon="/images/icons/icon-192x192.png"/>
		<ViewTransitions />
	</head>
	<body>
		<Header />
		<div class="min-h-screen">
			<slot />
		</div>
		<Footer />
		<!-- Cloudflare Web Analytics --><script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "419264b4a96a45dfae25aea713673fd5"}'></script><!-- End Cloudflare Web Analytics -->
	</body>
</html>
